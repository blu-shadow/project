# server/.env

# Replace the placeholder value below with your actual MongoDB connection string.
# IMPORTANT: Use a secure password and ensure your IP is whitelisted in MongoDB Atlas settings.
MONGODB_URI=mongodb+srv://<Your_MongoDB_Username>:<Your_Secure_Password>@<Your_Cluster_Name>.mongodb.net/dadawearDB?retryWrites=true&w=majority

# Local Database URI (if you are running MongoDB locally)
# MONGODB_URI=mongodb://localhost:27017/dadawearDB

# Secret key for generating JWT tokens (MAKE THIS LONG AND RANDOM!)
JWT_SECRET=this-should-be-a-very-long-and-random-string-for-security-0123456789

# Port to run the Express server on
PORT=5000
